	target vs_4_0

	default_params
	{
		param_named_auto worldViewProj worldviewproj_matrix
	}
}

vertex_program BasicWorldTexturedNoLightVP unified
{
	delegate BasicWorldTexturedNoLightVP_D3D9
	delegate BasicWorldTexturedNoLightVP_D3D11
}

