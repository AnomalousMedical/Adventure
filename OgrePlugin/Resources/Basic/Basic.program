vertex_program BasicWorldTexturedNoLightVP_D3D9 hlsl
{
	source OgrePlugin.Resources.Basic.D3D9.BasicWorldTexturedNoLightVP.hlsl
	entry_point main
	target vs_3_0

	default_params
	{
		param_named_auto worldViewProj worldviewproj_matrix
	}
}

vertex_program BasicWorldTexturedNoLightVP_D3D11 hlsl
{
