<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <NuspecFile>package\Win32.nuspec</NuspecFile>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\Release\</OutputPath>
  </PropertyGroup>

  <Target Name="Createx86" BeforeTargets="PreBuildEvent" Condition="!Exists('$(ProjectDir)package\contentFiles\any\any\x86')">
    <Exec Command="mkdir $(ProjectDir)package\contentFiles\any\any\x86" />
  </Target>

  <Target Name="Createx64" BeforeTargets="PreBuildEvent" Condition="!Exists('$(ProjectDir)package\contentFiles\any\any\x64')">
    <Exec Command="mkdir $(ProjectDir)package\contentFiles\any\any\x64" />
  </Target>

  <Target Name="CopyFiles" BeforeTargets="PreBuildEvent">
    <Exec Command="copy $(ProjectDir)..\..\..\Release\x86\Win32UniversalBridge.dll $(ProjectDir)package\contentFiles\any\any\x86\Win32UniversalBridge.dll" />
    <Exec Command="copy $(ProjectDir)..\..\..\Release\x86\WinMTDriver.dll $(ProjectDir)package\contentFiles\any\any\x86\WinMTDriver.dll" />
    <Exec Command="copy $(ProjectDir)..\..\..\Release\x86\OSHelper.dll $(ProjectDir)package\contentFiles\any\any\x86\OSHelper.dll" />

    <Exec Command="copy $(ProjectDir)..\..\..\Release\x64\Win32UniversalBridge.dll $(ProjectDir)package\contentFiles\any\any\x64\Win32UniversalBridge.dll" />
    <Exec Command="copy $(ProjectDir)..\..\..\Release\x64\WinMTDriver.dll $(ProjectDir)package\contentFiles\any\any\x64\WinMTDriver.dll" />
    <Exec Command="copy $(ProjectDir)..\..\..\Release\x64\OSHelper.dll $(ProjectDir)package\contentFiles\any\any\x64\OSHelper.dll" />
  </Target>
</Project>